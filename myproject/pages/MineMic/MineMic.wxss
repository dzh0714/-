/* pages/MineMic/MineMic.wxss */
page{
  width: 100%;
  height: 100%;
}

.wrap{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.top{
  width: 100%;
  height: 80rpx;
  display: flex;
  padding: 15rpx 20rpx;
  box-sizing: border-box; 
  justify-content: space-between;
  background:  rgb(224, 125, 125);
  color: white;
  font-size: 30rpx;
  align-items: center;
  flex-shrink: 0;
}
.more{
  font-size: 27rpx;
}
.top image{
  width: 40rpx;
  height: 40rpx;
}

.con{
  width: 100%;
  flex-shrink: 0;
}

.conItem{
  width: 100%;
  padding: 0rpx 10rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.num{
  font-size: 24rpx;
}
.textcon{
  border-bottom: 1rpx solid rgb(221, 221, 221);
  padding: 30rpx 20rpx 30rpx 0;
  margin-left: 20rpx;
  flex: 1;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  font-size: 28rpx;
  align-items: center;
  color: rgb(94, 94, 94)
}

.conItem image{
  width: 85rpx;
  height: 85rpx;
}

.create{
  width: 100%;
}

.createTit{
  width: 100%;
  height: 60rpx;
  background: rgb(237, 240, 240);
  padding-left: 15rpx;
  box-sizing: border-box;
  font-size: 25rpx;
  line-height: 60rpx;
}

.createItem{
  width: 100%;
  display: flex;
  align-items: center;
  padding: 10rpx 5rpx;
  box-sizing: border-box;
}

.createImg{
  width: 95rpx;
  height: 95rpx;
  flex-shrink: 0;
  
} 
.createCon{
  flex: 1;
  border-bottom: 2rpx solid rgb(228, 228, 228);
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.createConTit{
  color: rgb(66, 66, 66);
  font-size: 36rpx
}
.downLoad{
  font-size: 22rpx;
  color: rgb(177, 177, 177);
}
.createConDetail{
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.yes{
  width: 26rpx;
  height: 26rpx;
}

.laba{
  width: 30rpx;
  height: 30rpx;
  padding: 10rpx 20rpx;
}