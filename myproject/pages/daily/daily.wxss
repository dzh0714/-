/* pages/daily/daily.wxss */

page {
  width: 100%;
  height: 100%;
}

.wrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.banner {
  width: 100%;
  height: 250rpx;
}

.bannerimg {
  width: 100%;
  height: 100%;
}

.con {
  width: 100%;
}

.conTop {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 10rpx 15rpx 10rpx 0;
  box-sizing: border-box;
  align-items: center;
  font-size: 33rpx;
  border-bottom: 1rpx solid rgb(206, 206, 206);
}

.conTop image {
  width: 60rpx;
  height: 60rpx;
  padding: 10rpx;
}

.conTop-l {
  display: flex;
  align-items: center;
}

.conTop-r {
  display: flex;
  align-items: center;
}

.sing-wrap {
  width: 100%;
}

.singTop {
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
  box-sizing: border-box;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.singItem {
  font-size: 30rpx;
  color: rgb(66, 66, 66);
  letter-spacing: 3rpx;
}

.singer {
  font-size: 24rpx;
  color: rgb(138, 138, 138);
  letter-spacing: 5rpx;
}

.ext {
  width: 40rpx;
  height: 40rpx;
}
